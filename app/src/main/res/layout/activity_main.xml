<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F0F463"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvMiNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stMiNombre"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAgenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E3DEDE"
        android:text="@string/stAgenda"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnAgendaConstraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E3DEDE"
        android:text="@string/stAgendaConstraint"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnReceta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E3DEDE"
        android:text="@string/stReceta"
        android:textColor="#000000" />

</LinearLayout>